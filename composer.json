{
	"name": "eliashaeussler/cache-warmup",
	"description": "Composer package to warm up website caches, based on a given sitemap.xml",
	"license": "GPL-3.0-or-later",
	"type": "library",
	"authors": [
		{
			"name": "Elias Häußler",
			"email": "elias@haeussler.dev",
			"homepage": "https://haeussler.dev",
			"role": "Maintainer"
		}
	],
	"homepage": "https://haeussler.dev",
	"require": {
		"php": "~8.1.0",
		"ext-filter": "*",
		"ext-json": "*",
		"ext-libxml": "*",
		"ext-simplexml": "*",
		"guzzlehttp/guzzle": "^7.0",
		"guzzlehttp/promises": "^1.4",
		"guzzlehttp/psr7": "^2.0",
		"psr/http-client": "^1.0",
		"psr/http-message": "^1.0",
		"symfony/console": "^6.0"
	},
	"require-dev": {
		"armin/editorconfig-cli": "^1.5",
		"ergebnis/composer-normalize": "^2.28",
		"friendsofphp/php-cs-fixer": "^3.9",
		"jangregor/phpstan-prophecy": "^1.0",
		"phpspec/prophecy-phpunit": "^2.0",
		"phpstan/phpstan": "^1.8",
		"phpstan/phpstan-phpunit": "^1.1",
		"phpstan/phpstan-symfony": "^1.2",
		"phpunit/phpunit": "^9.5"
	},
	"autoload": {
		"psr-4": {
			"EliasHaeussler\\CacheWarmup\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"EliasHaeussler\\CacheWarmup\\Tests\\": "tests"
		}
	},
	"bin": [
		"bin/cache-warmup"
	],
	"config": {
		"allow-plugins": {
			"ergebnis/composer-normalize": true
		},
		"sort-packages": true
	},
	"scripts": {
		"lint": [
			"@lint:composer:fix",
			"@lint:editorconfig:fix",
			"@lint:php:fix"
		],
		"lint:composer": "@lint:composer:fix --dry-run",
		"lint:composer:fix": "@composer normalize --no-check-lock --no-update-lock",
		"lint:editorconfig": "ec",
		"lint:editorconfig:fix": "@lint:editorconfig --fix",
		"lint:php": "@lint:php:fix --dry-run",
		"lint:php:fix": "php-cs-fixer fix",
		"sca": [
			"@sca:php"
		],
		"sca:php": "phpstan analyse -c phpstan.neon",
		"test": "phpunit -c phpunit.xml",
		"test:coverage": "phpunit -c phpunit.coverage.xml"
	}
}
